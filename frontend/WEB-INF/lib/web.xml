<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>SmartHire</display-name>
    
    <!-- Welcome file list -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.smarthire.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- RegisterServlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.smarthire.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- LogoutServlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.smarthire.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- ViewJobsServlet -->
    <servlet>
        <servlet-name>ViewJobsServlet</servlet-name>
        <servlet-class>com.smarthire.controller.ViewJobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewJobsServlet</servlet-name>
        <url-pattern>/viewJobs</url-pattern>
    </servlet-mapping>

    <!-- ApplyJobServlet -->
    <servlet>
        <servlet-name>ApplyJobServlet</servlet-name>
        <servlet-class>com.smarthire.controller.ApplyJobServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplyJobServlet</servlet-name>
        <url-pattern>/applyJob</url-pattern>
    </servlet-mapping>

    <!-- MyApplicationsServlet -->
    <servlet>
        <servlet-name>MyApplicationsServlet</servlet-name>
        <servlet-class>com.smarthire.controller.MyApplicationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyApplicationsServlet</servlet-name>
        <url-pattern>/myApplications</url-pattern>
    </servlet-mapping>

    <!-- AddJobServlet -->
    <servlet>
        <servlet-name>AddJobServlet</servlet-name>
        <servlet-class>com.smarthire.controller.AddJobServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddJobServlet</servlet-name>
        <url-pattern>/addJob</url-pattern>
    </servlet-mapping>

    <!-- ViewMyJobsServlet -->
    <servlet>
        <servlet-name>ViewMyJobsServlet</servlet-name>
        <servlet-class>com.smarthire.controller.ViewMyJobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewMyJobsServlet</servlet-name>
        <url-pattern>/myJobs</url-pattern>
    </servlet-mapping>

    <!-- DeleteJobServlet -->
    <servlet>
        <servlet-name>DeleteJobServlet</servlet-name>
        <servlet-class>com.smarthire.controller.DeleteJobServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteJobServlet</servlet-name>
        <url-pattern>/deleteJob</url-pattern>
    </servlet-mapping>

    <!-- ViewApplicationsServlet -->
    <servlet>
        <servlet-name>ViewApplicationsServlet</servlet-name>
        <servlet-class>com.smarthire.controller.ViewApplicationsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewApplicationsServlet</servlet-name>
        <url-pattern>/viewApplications</url-pattern>
    </servlet-mapping>

    <!-- UpdateApplicationStatusServlet -->
    <servlet>
        <servlet-name>UpdateApplicationStatusServlet</servlet-name>
        <servlet-class>com.smarthire.controller.UpdateApplicationStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateApplicationStatusServlet</servlet-name>
        <url-pattern>/updateStatus</url-pattern>
    </servlet-mapping>

</web-app>
